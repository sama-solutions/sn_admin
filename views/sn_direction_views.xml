<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vue List -->
    <record id="sn_direction_view_list" model="ir.ui.view">
        <field name="name">sn.direction.list</field>
        <field name="model">sn.direction</field>
        <field name="arch" type="xml">
            <list string="Directions" decoration-muted="state == 'archived'" decoration-info="state == 'draft'" multi_edit="1">
                <field name="name"/>
                <field name="code"/>
                <field name="type"/>
                <field name="ministry_id"/>
                <field name="category_id"/>
                <field name="manager_id"/>
                <field name="service_count"/>
                <field name="state"/>
            </list>
        </field>
    </record>

    <!-- Vue Form -->
    <record id="sn_direction_view_form" model="ir.ui.view">
        <field name="name">sn.direction.form</field>
        <field name="model">sn.direction</field>
        <field name="arch" type="xml">
            <form string="Direction">
                <header>
                    <button name="action_view_services" type="object" string="Voir Services" class="oe_highlight"/>
                    <button name="action_view_agents" type="object" string="Voir Agents"/>
                    <button name="action_create_hr_department" type="object" string="Créer Département RH" invisible="department_id"/>
                    <button name="action_sync_to_hr_department" type="object" string="Synchroniser vers RH" invisible="not department_id"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,active,archived"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_services" type="object" class="oe_stat_button" icon="fa-sitemap">
                            <field name="service_count" widget="statinfo" string="Services"/>
                        </button>
                        <button name="action_view_agents" type="object" class="oe_stat_button" icon="fa-users">
                            <field name="agent_count" widget="statinfo" string="Agents"/>
                        </button>
                        <button name="%(hr.open_view_employee_list_my)d" type="action" class="oe_stat_button" icon="fa-user" invisible="employee_count == 0">
                            <field name="employee_count" widget="statinfo" string="Employés RH"/>
                        </button>
                    </div>
                    <widget name="web_ribbon" title="Archivé" bg_color="bg-danger" invisible="state != 'archived'"/>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Nom de la direction..."/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="code"/>
                            <field name="type"/>
                            <field name="ministry_id"/>
                            <field name="category_id" domain="[('ministry_id', '=', ministry_id)]"/>
                            <field name="manager_id"/>
                            <field name="active" invisible="1"/>
                        </group>
                        <group>
                            <field name="qr_code" widget="image" options="{'size': [150, 150]}"/>
                            <field name="qr_code_url" widget="url" readonly="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Contacts">
                            <group>
                                <group string="Téléphones">
                                    <field name="phone"/>
                                    <field name="phone_2"/>
                                    <field name="fax"/>
                                </group>
                                <group string="Email">
                                    <field name="email" widget="email"/>
                                </group>
                            </group>
                            <group>
                                <group string="Adresse">
                                    <field name="address_street"/>
                                    <field name="address_city"/>
                                    <field name="address_zip"/>
                                </group>
                                <group string="Géolocalisation">
                                    <field name="gps_latitude"/>
                                    <field name="gps_longitude"/>
                                </group>
                            </group>
                        </page>
                        <page string="Visibilité Publique">
                            <group>
                                <group>
                                    <field name="public_visible"/>
                                    <field name="public_show_phone"/>
                                    <field name="public_show_email"/>
                                    <field name="public_show_address"/>
                                </group>
                            </group>
                        </page>
                        <page string="Intégration RH">
                            <group>
                                <group>
                                    <field name="department_id"/>
                                    <field name="parent_department_id" readonly="1"/>
                                </group>
                            </group>
                            <group string="Actions RH">
                                <button name="action_create_hr_department" type="object" string="Créer Département RH" class="btn-primary" invisible="department_id"/>
                                <button name="action_sync_to_hr_department" type="object" string="Synchroniser vers RH" class="btn-secondary" invisible="not department_id"/>
                            </group>
                        </page>
                        <page string="Services">
                            <field name="service_ids" readonly="1">
                                <list>
                                    <field name="name"/>
                                    <field name="code"/>
                                    <field name="type"/>
                                    <field name="agent_count"/>
                                    <field name="state"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Vue Kanban -->
    <record id="sn_direction_view_kanban" model="ir.ui.view">
        <field name="name">sn.direction.kanban</field>
        <field name="model">sn.direction</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="name"/>
                <field name="code"/>
                <field name="type"/>
                <field name="ministry_id"/>
                <field name="category_id"/>
                <field name="service_count"/>
                <field name="state"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <div class="o_kanban_record_top mb-2">
                                    <strong class="o_kanban_record_title"><t t-esc="record.name.value"/></strong>
                                </div>
                                <div class="o_kanban_record_body">
                                    <div><field name="code"/> - <field name="type"/></div>
                                    <div class="text-muted" t-if="record.category_id.value">
                                        <i class="fa fa-folder-open"/> <t t-esc="record.category_id.value"/>
                                    </div>
                                </div>
                                <div class="o_kanban_record_bottom mt-2">
                                    <div class="oe_kanban_bottom_left">
                                        <span class="badge badge-pill badge-primary"><i class="fa fa-sitemap"/> <t t-esc="record.service_count.value"/> Services</span>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <field name="state" widget="label_selection" options="{'classes': {'draft': 'warning', 'active': 'success', 'archived': 'secondary'}}"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Vue Search -->
    <record id="sn_direction_view_search" model="ir.ui.view">
        <field name="name">sn.direction.search</field>
        <field name="model">sn.direction</field>
        <field name="arch" type="xml">
            <search string="Rechercher Directions">
                <field name="name"/>
                <field name="code"/>
                <field name="ministry_id"/>
                <filter string="Direction Générale" name="generale" domain="[('type', '=', 'generale')]"/>
                <filter string="Direction Régionale" name="regionale" domain="[('type', '=', 'regionale')]"/>
                <filter string="Direction Technique" name="technique" domain="[('type', '=', 'technique')]"/>
                <separator/>
                <filter string="Actives uniquement" name="active" domain="[('active', '=', True)]"/>
                <group expand="0" string="Grouper par">
                    <filter string="Ministère" name="group_ministry" context="{'group_by': 'ministry_id'}"/>
                    <filter string="Type" name="group_type" context="{'group_by': 'type'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="sn_direction_action" model="ir.actions.act_window">
        <field name="name">Directions</field>
        <field name="res_model">sn.direction</field>
        <field name="view_mode">list,form,kanban</field>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Créer une nouvelle direction
            </p>
            <p>
                Gérez les directions générales et régionales de l'administration.
            </p>
        </field>
    </record>

</odoo>
