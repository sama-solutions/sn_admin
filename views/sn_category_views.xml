<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vue List -->
    <record id="sn_category_view_list" model="ir.ui.view">
        <field name="name">sn.category.list</field>
        <field name="model">sn.category</field>
        <field name="arch" type="xml">
            <list string="Catégories" multi_edit="1">
                <field name="name"/>
                <field name="code"/>
                <field name="ministry_id"/>
                <field name="direction_ids" widget="many2many_tags"/>
            </list>
        </field>
    </record>

    <!-- Vue Form -->
    <record id="sn_category_view_form" model="ir.ui.view">
        <field name="name">sn.category.form</field>
        <field name="model">sn.category</field>
        <field name="arch" type="xml">
            <form string="Catégorie">
                <header>
                    <button name="action_view_directions" type="object" string="Voir Directions" class="oe_highlight"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_directions" type="object" class="oe_stat_button" icon="fa-building">
                            <field name="direction_count" widget="statinfo" string="Directions"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Nom de la catégorie..."/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="code"/>
                            <field name="ministry_id"/>
                            <field name="active" invisible="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Directions">
                            <field name="direction_ids" readonly="1">
                                <list>
                                    <field name="name"/>
                                    <field name="code"/>
                                    <field name="type"/>
                                    <field name="service_count"/>
                                    <field name="state"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Vue Kanban -->
    <record id="sn_category_view_kanban" model="ir.ui.view">
        <field name="name">sn.category.kanban</field>
        <field name="model">sn.category</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="name"/>
                <field name="code"/>
                <field name="ministry_id"/>
                <field name="direction_count"/>
                <field name="state"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <div class="o_kanban_record_top mb-2">
                                    <strong class="o_kanban_record_title"><t t-esc="record.name.value"/></strong>
                                </div>
                                <div class="o_kanban_record_body">
                                    <span class="text-muted"><t t-esc="record.code.value"/></span>
                                </div>
                                <div class="o_kanban_record_bottom mt-2">
                                    <div class="oe_kanban_bottom_left">
                                        <span class="badge badge-pill badge-primary"><i class="fa fa-building"/> <t t-esc="record.direction_count.value"/> Directions</span>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <field name="state" widget="label_selection" options="{'classes': {'draft': 'warning', 'active': 'success', 'archived': 'secondary'}}"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Vue Search -->
    <record id="sn_category_view_search" model="ir.ui.view">
        <field name="name">sn.category.search</field>
        <field name="model">sn.category</field>
        <field name="arch" type="xml">
            <search string="Rechercher Catégories">
                <field name="name"/>
                <field name="code"/>
                <field name="ministry_id"/>
                <filter string="Actifs uniquement" name="active" domain="[('active', '=', True)]"/>
                <group expand="0" string="Grouper par">
                    <filter string="Ministère" name="group_ministry" context="{'group_by': 'ministry_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="sn_category_action" model="ir.actions.act_window">
        <field name="name">Catégories</field>
        <field name="res_model">sn.category</field>
        <field name="view_mode">list,form,kanban</field>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Créer une nouvelle catégorie
            </p>
            <p>
                Gérez les catégories principales (Cabinet, Secrétariat général, Directions Générales, Autres administrations).
            </p>
        </field>
    </record>

</odoo>
