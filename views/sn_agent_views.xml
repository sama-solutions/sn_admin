<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vue List -->
    <record id="sn_agent_view_list" model="ir.ui.view">
        <field name="name">sn.agent.list</field>
        <field name="model">sn.agent</field>
        <field name="arch" type="xml">
            <list string="Agents" decoration-muted="state == 'archived'" decoration-info="state == 'draft'" multi_edit="1">
                <field name="name"/>
                <field name="function"/>
                <field name="service_id"/>
                <field name="direction_id"/>
                <field name="ministry_id"/>
                <field name="work_phone"/>
                <field name="work_email"/>
                <field name="state"/>
            </list>
        </field>
    </record>

    <!-- Vue Form -->
    <record id="sn_agent_view_form" model="ir.ui.view">
        <field name="name">sn.agent.form</field>
        <field name="model">sn.agent</field>
        <field name="arch" type="xml">
            <form string="Agent">
                <header>
                    <button name="action_view_employee" type="object" string="Voir Employé RH" attrs="{'invisible': [('employee_id', '=', False)]}"/>
                    <button name="action_create_hr_employee" type="object" string="Créer Employé RH" attrs="{'invisible': [('employee_id', '!=', False)]}"/>
                    <button name="action_sync_to_hr_employee" type="object" string="Synchroniser vers RH" attrs="{'invisible': [('employee_id', '=', False)]}"/>
                    <button name="action_sync_from_hr_employee" type="object" string="Importer depuis RH" attrs="{'invisible': [('employee_id', '=', False)]}"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,active,archived"/>
                </header>
                <sheet>
                    <widget name="web_ribbon" title="Archivé" bg_color="bg-danger" attrs="{'invisible': [('state', '!=', 'archived')]}"/>
                    <widget name="web_ribbon" title="Intérim" bg_color="bg-warning" attrs="{'invisible': [('is_interim', '=', False)]}"/>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Nom complet de l'agent..."/>
                        </h1>
                        <h2>
                            <field name="function" placeholder="Fonction..."/>
                        </h2>
                    </div>
                    <group>
                        <group string="Identité">
                            <field name="first_name"/>
                            <field name="last_name"/>
                            <field name="matricule"/>
                            <field name="active" invisible="1"/>
                        </group>
                        <group>
                            <field name="qr_code" widget="image" options="{'size': [150, 150]}"/>
                            <field name="qr_code_url" widget="url" readonly="1"/>
                        </group>
                    </group>
                    <group string="Affectation">
                        <group>
                            <field name="service_id"/>
                            <field name="direction_id" readonly="1"/>
                            <field name="ministry_id" readonly="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Coordonnées">
                            <group>
                                <group string="Téléphones">
                                    <field name="work_phone"/>
                                    <field name="mobile_phone"/>
                                </group>
                                <group string="Email">
                                    <field name="work_email" widget="email"/>
                                </group>
                            </group>
                        </page>
                        <page string="Nomination">
                            <group>
                                <group>
                                    <field name="nomination_date"/>
                                    <field name="nomination_decree"/>
                                    <field name="end_date"/>
                                    <field name="is_interim"/>
                                </group>
                                <group>
                                    <field name="nomination_document" filename="nomination_document_filename"/>
                                </group>
                            </group>
                        </page>
                        <page string="Visibilité Publique">
                            <group>
                                <group>
                                    <field name="public_visible"/>
                                    <field name="public_show_phone"/>
                                    <field name="public_show_email"/>
                                    <field name="public_show_photo"/>
                                </group>
                            </group>
                        </page>
                        <page string="Intégration RH">
                            <group>
                                <group>
                                    <field name="employee_id"/>
                                    <field name="job_id"/>
                                    <field name="department_id" readonly="1"/>
                                </group>
                                <group>
                                    <field name="parent_id"/>
                                    <field name="coach_id"/>
                                    <field name="work_location_id"/>
                                </group>
                            </group>
                            <group>
                                <group>
                                    <field name="auto_sync_hr"/>
                                </group>
                            </group>
                            <group string="Actions RH">
                                <button name="action_create_hr_employee" type="object" string="Créer Employé RH" class="btn-primary" attrs="{'invisible': [('employee_id', '!=', False)]}"/>
                                <button name="action_sync_to_hr_employee" type="object" string="Synchroniser vers RH" class="btn-secondary" attrs="{'invisible': [('employee_id', '=', False)]}"/>
                                <button name="action_sync_from_hr_employee" type="object" string="Importer depuis RH" class="btn-secondary" attrs="{'invisible': [('employee_id', '=', False)]}"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Vue Kanban -->
    <record id="sn_agent_view_kanban" model="ir.ui.view">
        <field name="name">sn.agent.kanban</field>
        <field name="model">sn.agent</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="name"/>
                <field name="function"/>
                <field name="work_phone"/>
                <field name="work_email"/>
                <field name="service_id"/>
                <field name="state"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <div class="o_kanban_record_top mb-2">
                                    <strong class="o_kanban_record_title"><t t-esc="record.name.value"/></strong>
                                </div>
                                <div class="o_kanban_record_body">
                                    <div class="text-primary"><t t-esc="record.function.value"/></div>
                                    <div class="text-muted">
                                        <i class="fa fa-briefcase"/> <t t-esc="record.service_id.value"/>
                                    </div>
                                    <div t-if="record.work_phone.value" class="mt-1">
                                        <i class="fa fa-phone"/> <t t-esc="record.work_phone.value"/>
                                    </div>
                                    <div t-if="record.work_email.value">
                                        <i class="fa fa-envelope"/> <t t-esc="record.work_email.value"/>
                                    </div>
                                </div>
                                <div class="o_kanban_record_bottom mt-2">
                                    <div class="oe_kanban_bottom_right">
                                        <field name="state" widget="label_selection" options="{'classes': {'draft': 'warning', 'active': 'success', 'archived': 'secondary'}}"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Vue Search -->
    <record id="sn_agent_view_search" model="ir.ui.view">
        <field name="name">sn.agent.search</field>
        <field name="model">sn.agent</field>
        <field name="arch" type="xml">
            <search string="Rechercher Agents">
                <field name="name"/>
                <field name="function"/>
                <field name="matricule"/>
                <field name="work_email"/>
                <field name="service_id"/>
                <field name="direction_id"/>
                <field name="ministry_id"/>
                <filter string="Actifs uniquement" name="active" domain="[('active', '=', True)]"/>
                <group expand="0" string="Grouper par">
                    <filter string="Service" name="group_service" context="{'group_by': 'service_id'}"/>
                    <filter string="Fonction" name="group_function" context="{'group_by': 'function'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="sn_agent_action" model="ir.actions.act_window">
        <field name="name">Agents</field>
        <field name="res_model">sn.agent</field>
        <field name="view_mode">list,form,kanban</field>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Créer un nouvel agent
            </p>
            <p>
                Gérez les agents de l'administration publique sénégalaise.
            </p>
        </field>
    </record>

</odoo>
