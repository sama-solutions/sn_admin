<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vue List (liste) -->
    <record id="sn_ministry_view_list" model="ir.ui.view">
        <field name="name">sn.ministry.list</field>
        <field name="model">sn.ministry</field>
        <field name="arch" type="xml">
            <list string="Ministères" decoration-muted="state == 'archived'" decoration-info="state == 'draft'" multi_edit="1">
                <field name="name"/>
                <field name="code"/>
                <field name="type"/>
                <field name="phone"/>
                <field name="email"/>
                <field name="direction_count"/>
                <field name="state"/>
            </list>
        </field>
    </record>

    <!-- Vue Form (formulaire) -->
    <record id="sn_ministry_view_form" model="ir.ui.view">
        <field name="name">sn.ministry.form</field>
        <field name="model">sn.ministry</field>
        <field name="arch" type="xml">
            <form string="Ministère">
                <header>
                    <button name="action_view_categories" type="object" string="Voir Catégories" class="oe_highlight"/>
                    <button name="action_view_directions" type="object" string="Voir Directions"/>
                    <button name="action_view_services" type="object" string="Voir Services"/>
                    <button name="action_view_agents" type="object" string="Voir Agents"/>
                    <button name="action_create_hr_department" type="object" string="Créer Département RH" invisible="department_id"/>
                    <button name="action_sync_to_hr_department" type="object" string="Synchroniser vers RH" invisible="not department_id"/>
                    <button name="action_export_organigramme" type="object" string="Exporter Organigramme"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,active,archived"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_categories" type="object" class="oe_stat_button" icon="fa-folder-open">
                            <field name="category_count" widget="statinfo" string="Catégories"/>
                        </button>
                        <button name="action_view_directions" type="object" class="oe_stat_button" icon="fa-building">
                            <field name="direction_count" widget="statinfo" string="Directions"/>
                        </button>
                        <button name="action_view_services" type="object" class="oe_stat_button" icon="fa-sitemap">
                            <field name="service_count" widget="statinfo" string="Services"/>
                        </button>
                        <button name="action_view_agents" type="object" class="oe_stat_button" icon="fa-users">
                            <field name="agent_count" widget="statinfo" string="Agents"/>
                        </button>
                        <button name="%(hr.open_view_employee_list_my)d" type="action" class="oe_stat_button" icon="fa-user" invisible="employee_count == 0">
                            <field name="employee_count" widget="statinfo" string="Employés RH"/>
                        </button>
                    </div>
                    <widget name="web_ribbon" title="Archivé" bg_color="bg-danger" invisible="state != 'archived'"/>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Nom du ministère..."/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="code"/>
                            <field name="type"/>
                            <field name="active" invisible="1"/>
                        </group>
                        <group>
                            <field name="qr_code" widget="image" options="{'size': [150, 150]}"/>
                            <field name="qr_code_url" widget="url" readonly="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Informations Générales">
                            <group string="Description">
                                <field name="description" placeholder="Description détaillée du ministère..." nolabel="1"/>
                            </group>
                        </page>
                        <page string="Contacts">
                            <group>
                                <group string="Téléphones">
                                    <field name="phone"/>
                                    <field name="phone_2"/>
                                    <field name="fax"/>
                                </group>
                                <group string="Internet">
                                    <field name="email" widget="email"/>
                                    <field name="website" widget="url"/>
                                </group>
                            </group>
                            <group>
                                <group string="Adresse">
                                    <field name="address_street"/>
                                    <field name="address_city"/>
                                    <field name="address_zip"/>
                                    <field name="address_country_id"/>
                                </group>
                                <group string="Géolocalisation">
                                    <field name="gps_latitude"/>
                                    <field name="gps_longitude"/>
                                </group>
                            </group>
                        </page>
                        <page string="Visibilité Publique">
                            <group>
                                <group>
                                    <field name="public_visible"/>
                                    <field name="public_show_phone"/>
                                    <field name="public_show_email"/>
                                    <field name="public_show_address"/>
                                </group>
                            </group>
                        </page>
                        <page string="Intégration RH">
                            <group>
                                <group>
                                    <field name="department_id"/>
                                </group>
                            </group>
                            <group string="Actions RH">
                                <button name="action_create_hr_department" type="object" string="Créer Département RH" class="btn-primary" invisible="department_id"/>
                                <button name="action_sync_to_hr_department" type="object" string="Synchroniser vers RH" class="btn-secondary" invisible="not department_id"/>
                            </group>
                        </page>
                        <page string="Catégories">
                            <field name="category_ids" readonly="1">
                                <list>
                                    <field name="name"/>
                                    <field name="code"/>
                                    <field name="direction_count"/>
                                    <field name="state"/>
                                </list>
                            </field>
                        </page>
                        <page string="Directions">
                            <field name="direction_ids" readonly="1">
                                <list>
                                    <field name="name"/>
                                    <field name="code"/>
                                    <field name="category_id"/>
                                    <field name="type"/>
                                    <field name="service_count"/>
                                    <field name="state"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Vue Kanban -->
    <record id="sn_ministry_view_kanban" model="ir.ui.view">
        <field name="name">sn.ministry.kanban</field>
        <field name="model">sn.ministry</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="name"/>
                <field name="code"/>
                <field name="type"/>
                <field name="category_count"/>
                <field name="direction_count"/>
                <field name="state"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <div class="o_kanban_record_top mb-2">
                                    <strong class="o_kanban_record_title"><t t-esc="record.name.value"/></strong>
                                </div>
                                <div class="o_kanban_record_body">
                                    <field name="code"/> - <field name="type"/>
                                </div>
                                <div class="o_kanban_record_bottom mt-2">
                                    <div class="oe_kanban_bottom_left">
                                        <span class="badge badge-pill badge-info"><i class="fa fa-folder-open"/> <t t-esc="record.category_count.value"/> Catégories</span>
                                        <span class="badge badge-pill badge-primary ms-1"><i class="fa fa-building"/> <t t-esc="record.direction_count.value"/> Directions</span>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <field name="state" widget="label_selection" options="{'classes': {'draft': 'warning', 'active': 'success', 'archived': 'secondary'}}"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Vue Graph -->
    <record id="sn_ministry_view_graph" model="ir.ui.view">
        <field name="name">sn.ministry.graph</field>
        <field name="model">sn.ministry</field>
        <field name="arch" type="xml">
            <graph string="Statistiques Ministères" type="bar">
                <field name="name"/>
                <field name="direction_count" type="measure"/>
            </graph>
        </field>
    </record>

    <!-- Vue Pivot -->
    <record id="sn_ministry_view_pivot" model="ir.ui.view">
        <field name="name">sn.ministry.pivot</field>
        <field name="model">sn.ministry</field>
        <field name="arch" type="xml">
            <pivot string="Analyse Ministères">
                <field name="name" type="row"/>
                <field name="type" type="col"/>
                <field name="direction_count" type="measure"/>
                <field name="service_count" type="measure"/>
                <field name="agent_count" type="measure"/>
            </pivot>
        </field>
    </record>

    <!-- Vue Search -->
    <record id="sn_ministry_view_search" model="ir.ui.view">
        <field name="name">sn.ministry.search</field>
        <field name="model">sn.ministry</field>
        <field name="arch" type="xml">
            <search string="Rechercher Ministères">
                <field name="name"/>
                <field name="code"/>
                <field name="email"/>
                <filter string="Présidence" name="presidency" domain="[('type', '=', 'presidency')]"/>
                <filter string="Primature" name="primature" domain="[('type', '=', 'primature')]"/>
                <filter string="Ministères" name="ministry" domain="[('type', '=', 'ministry')]"/>
                <separator/>
                <filter string="Brouillon" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Actifs" name="active" domain="[('state', '=', 'active')]"/>
                <filter string="Archivés" name="archived" domain="[('state', '=', 'archived')]"/>
                <separator/>
                <filter string="Actifs uniquement" name="active_only" domain="[('active', '=', True)]"/>
                <group expand="0" string="Grouper par">
                    <filter string="Type" name="group_type" context="{'group_by': 'type'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="sn_ministry_action" model="ir.actions.act_window">
        <field name="name">Ministères</field>
        <field name="res_model">sn.ministry</field>
        <field name="view_mode">kanban,list,form,graph,pivot</field>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Créer un nouveau ministère
            </p>
            <p>
                Gérez les ministères et institutions de l'administration sénégalaise.
            </p>
        </field>
    </record>

</odoo>
